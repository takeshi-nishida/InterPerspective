<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title %> - InterPerspective</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <nav>
    <%= link_to 'InterPerspective', root_url %> |
    <% if current_user then -%>
      ログイン中: <%= current_user.login %>
      <%= link_to 'ログアウト', user_session_path(current_user_session), :method => :delete %>
    <% else -%>
      <%= link_to 'ユーザ登録', new_user_url %>
      <%= link_to 'ログイン', new_user_session_url %>
    <% end -%>
  </nav>
  <% if flash[:notice] then -%>
  <div id="notice"><%= flash[:notice]  %></div>
  <% end -%>

  <h1><%= @page_title %></h1>

<%= yield %>

</body>
</html>
